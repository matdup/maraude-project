  <%= render 'shared/navbar' %>

  <div class= "container">
    <div>
      <div class="cards pt-5">
        <% @maraudes.each do |maraude| %>
        <div class="card zoom" data-aos="zoom-in-up">
          <div class="card-picture" data-id="<%= maraude.id %>">
            <% if !maraude.photo.nil? %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= image_path maraude.photo, height: 300, width: 400, crop: :fill %>')">
              </div>
            <% else %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('https://images.unsplash.com/photo-1519741347686-c1e0aadf4611?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1980&q=80')">
              </div>
            <% end %>
          </div>
          <div class="card-body">
            <h2><%= maraude.title %>❗️</h2>
              <p class="card-text">📌<%=  maraude.address %></p>
              <p class="card-text">📌<%=  maraude.starts_at %></p>
              <p class="card-text">📌<%=  maraude.ends_at %></p>
              <p class="card-text">📝<%=  maraude.description %></p>
              <p class="card-text"><%=  maraude.capacity %>participants</p>
          </div>
        </div>
        <% end %>
      </div>
      <div>
        <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>

