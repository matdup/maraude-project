
  <div class="maraude-title" style="height: 350px; width: 100%; background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path(@maraude.photo) %>');">
    <h1> <%= @maraude.title %> </h1>
    <p class ="logo-asso"> <%= cl_image_tag(@maraude.asso.photo, style: "height: 80px") %></p>

  </div>

  <div class="bouton-maraude"><i class="fas fa-chevron-left"></i> <%= link_to "Revenir aux maraudes", maraudes_path %>
  </div>

  <div class="mauraude-main-container">
    <div class="mauraude-container-left">

      <p style="font-weight: 600;"><%= @maraude.starts_at.strftime("%A %d %B %H:%M") %> / <%= @maraude.ends_at.strftime("%H:%M") %></p>
      <p class=""style="font-weight: 100;"><%= @maraude.description%></p>
      <p class="mx-5" style="font-weight: 600;"><i class="fas fa-map-marker-alt"></i> départ : <%= @maraude.address_start %>

      </p>
      <p class="mx-5" style="font-weight: 600;"><i class="fas fa-flag-checkered"></i> arrivée : <%= @maraude.address_end %>

      </p>
      <p class="mb-5">La demande de <%=@maraude.asso.name %> est de <strong><%= @maraude.capacity %> personnes</strong>. Il reste <strong> <%= @remaining_places %> </strong> places !</p>


      <div class="mt-3">
        <% if user_signed_in? %>
          <% if current_user.bookings.where(maraude: @maraude).exists? %>
            <h3 class="text-center">Vous avez déjà réservé cette maraude </h3>
          <% elsif @remaining_places == 0 %>
            <h2>Il n'y a plus de place</h2>
          <% else %>
            <div class="mb-4">
              <p>Inscrivez-vous :</p>
            </div>
            <%= simple_form_for [@maraude, @booking] do |f| %>

              <div class="d-flex justify-content-between mb-4">

                <div class="border-bottom mb-4" style="width: 270px;">
                  <%=  text_field_tag "user[first_name]", current_user.first_name, placeholder: 'first name', class: "border-0", style: "outline: none; background-color: #F7F7F7;" %>
                </div>

                <div class="border-bottom mb-4" style="width: 270px;">
                  <%= text_field_tag "user[last_name]", current_user.last_name, placeholder: 'last name', class: "border-0", style: "outline: none; background-color: #F7F7F7;" %>
                </div>

              </div>

              <div class="d-flex justify-content-between mb-4 border-0">

                <div class="border-bottom mb-4" style="width: 270px;">
                  <%= text_field_tag "user[email]", current_user.email, placeholder: 'email', class: "border-0 w-100", style: "outline: none; background-color: #F7F7F7;" %>
                </div>

                <div class="border-bottom mb-4" style="width: 270px;">
                  <%= text_field_tag "user[phone_number]", current_user.phone_number, placeholder: 'phone number', class: "border-0", style: "outline: none; background-color: #F7F7F7;" %>
                </div>

              </div>

              <div class="d-flex justify-content-center mb-4">
                <%= f.submit "Participez à cette maraude", class: "btn", style: "background-color: #FFE436; border-radius: 15px; padding: 10px; width: 330px;"%>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>

    </div>

    <div class="maraude-container-right">
      <div
        id="map"
        data-markers="<%= @markers.to_json %>"
        data-steps="<%= @steps.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
