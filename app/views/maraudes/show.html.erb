<div class="maraude-show-background" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path(@maraude.photo) %>');">
  <div class="maraude-show-card">
    <div class="maraude-card-left-part">
      <div
        id="map"
        data-markers="<%= @markers.to_json %>"
        data-steps="<%= @steps.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="maraude-card-right-part">
      <div class="maraude-show-description">
        <%= cl_image_tag(@maraude.photo) %>
        <h3><strong><%= @maraude.title %></strong></h3>
        <p><%= @maraude.description %></p>
        <div class="maraude-more-infos">
          <p>Plus d'infos</p>
        </div>
      </div>
      <div class="maraude-show-details">
        <p style="margin-top: 39px;"><strong><%= I18n.l(@maraude.starts_at, format: :long, locale: :'fr')%> / <%= @maraude.ends_at.strftime("%H:%M") %></strong></p>
         <p class="mx-5" style="font-weight: 600;"><i class="fas fa-map-marker-alt"></i> départ : <%= @maraude.address_start %></p>
         <p class="mx-5" style="font-weight: 600;"><i class="fas fa-flag-checkered"></i> arrivée : <%= @maraude.address_end %></p>
         <p class="mb-5">La demande de <%=@maraude.asso.name %> est de <strong><%= @maraude.capacity %> personnes</strong>. Il reste <strong> <%= @remaining_places %> </strong> places !</p>


         <div class="mt-3">
           <% if user_signed_in? %>
             <% if current_user.bookings.where(maraude: @maraude).exists? %>
               <h3 class="text-center">Vous avez déjà réservé cette maraude </h3>
             <% elsif @remaining_places == 0 %>
               <h2>Il n'y a plus de place</h2>
             <% else %>
               <div class="mb-4">
                 <p>Inscrivez-vous :</p>
               </div>
               <%= simple_form_for [@maraude, @booking] do |f| %>

                 <!-- <div class="d-flex justify-content-between mb-4"> -->

                   <div class="" style="">
                     <%=  text_field_tag "user[first_name]", current_user.first_name, placeholder: 'first name' %>
                   </div>

                   <div class="" style="">
                     <%= text_field_tag "user[last_name]", current_user.last_name, placeholder: 'last name' %>
                   </div>

                 <!-- </div> -->

                 <!-- <div class="d-flex justify-content-between mb-4 border-0"> -->

                   <div class="" style="">
                     <%= text_field_tag "user[email]", current_user.email, placeholder: 'email' %>
                   </div>

                   <div class="" style="">
                     <%= text_field_tag "user[phone_number]", current_user.phone_number, placeholder: 'phone number' %>
                   </div>

                 <!-- </div> -->

                 <div class="d-flex justify-content-center mb-4">
                   <%= f.submit "Participez à cette maraude", class: "btn", style: "background-color: #FFE436; border-radius: 15px; padding: 10px; width: 330px;"%>
                 </div>
               <% end %>
             <% end %>
           <% end %>
         </div>

      </div>
    </div>
  </div>
</div>
<div class="maraude-asso-infos d-none">
  <p><%= @maraude.asso.name %></p>
  <p><%= @maraude.asso.address %></p>
  <p><%= @maraude.asso.phone_number %></p>
</div>
