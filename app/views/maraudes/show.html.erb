<%= render 'shared/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-space-between align-item-center my-3 p-0" style="">

      <div class="pr-4">
        <div class="my-5">

          <%= link_to "Back to all maraudes", maraudes_path %>
          <h1><%= @maraude.title %></h1>
          <h2> <%= @maraude.address_start %></h2>
          <p><%= @maraude.description%></p>
          <p><%= @maraude.starts_at %></p>
          <p><%= @maraude.ends_at %></p>

        </div>

        <div class="m-2">
          <%= cl_image_tag(@maraude.photo, style: "height: 250px")%>
        </div>

      </div>

      <div>
        <div
          id="map"
          style="width: 604px;
          height: 357px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" class="mt-5">
        </div>

        <div class="mt-3 bg-white p-3 w-100">
          <div>
            <p>Inscrivez-vous :</p>
          </div>
          <%= simple_form_for [@maraude, @booking] do |f| %>
            <div class="">
              <%= text_field_tag "user[first_name]", current_user.first_name, placeholder: 'first name' %>

              <%= text_field_tag "user[last_name]", current_user.last_name, placeholder: 'last name' %>
            </div>
            <div class="">
            <%= text_field_tag "user[email]", current_user.email, placeholder: 'email' %>

            <%= text_field_tag "user[phone_number]", current_user.phone_number, placeholder: 'phone number' %>
            </div>
            <%= f.submit "RÃ©servez cette maraude", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
